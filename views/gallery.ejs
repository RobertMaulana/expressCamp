<% include partials/header %>

	<div class="container">
		<div class="jumbotron" style="border-radius: 0px;">
			<h1>Gallery place</h1>
			<p>Take picture whatever you want</p>
			<a class="btn btn-default btn-lg" href="/gallery/new" style="border-radius: 0px;"><i class="fa fa-picture-o" aria-hidden="true"></i> Add Picture</a>
		</div>
		<div class="row">
			<% data.forEach(function(gallery){ %>
				<div class="col-lg-4 col-md-6 col-sm-12">
					<div class="thumbnail text-center">
						<img src="<%= gallery.img %>">
						<h4><%= gallery.nama %></h4>
						<div class="form-group">
							<a class="btn btn-default" href="/gallery/<%= gallery._id %>"><i class="fa fa-address-card-o" aria-hidden="true"></i> Info</a>
						</div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>

<% include partials/footer %>