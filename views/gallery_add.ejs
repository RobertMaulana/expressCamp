<% include partials/header %>

	<div class="container">
		<div class="row">
			<div class="col-lg-12" style="padding-top: 6%;">
				<h2 style="text-align:center;">New Gallery</h2>
				<form action="/gallery" method="post" style="width: 30%; margin: 0 auto;">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="Type picture name">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="img" placeholder="Type picture link">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="description" placeholder="Type description">
					</div>
					<div class="form-group">
						<input class="btn btn-default btn-block" type="submit" value="Save" style="border-radius: 0px;">
					</div>
				</form>
			</div>
		</div>
	</div>

<% include partials/footer %>